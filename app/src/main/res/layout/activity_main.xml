<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="thedoctors05.tentfinder.MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="69dp"
        android:layout_height="17dp"
        android:text="Szerokość:"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="272dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Nazwa"
        android:inputType="text"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"></LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="54dp"
        android:layout_height="17dp"
        android:text="Długość:"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="66dp"
        android:layout_height="17dp"
        android:text="Dostawca:"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/dostawca_ety"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        tools:layout_editor_absoluteY="80dp" />

    <TextView
        android:id="@+id/dlugosc_ety"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginLeft="39dp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        tools:layout_editor_absoluteY="105dp" />

    <TextView
        android:id="@+id/szerokosc_ety"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        tools:layout_editor_absoluteY="130dp" />

    <Button
        android:id="@+id/coordinates_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:onClick="getLocationFunc"
        android:text="Współrzędne"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/bAddTent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add tent"
        android:gravity="bottom"/>

</LinearLayout>
